{
  "name": "ui-core-storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-core-storybook/src",
  "prefix": "bui",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "libs/ui-core-storybook/ng-package.json",
        "tailwindConfig": "libs/ui-core-storybook/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ui-core-storybook/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ui-core-storybook/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/ui-core-storybook/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build-styles": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/ui-core-storybook",
        "command": ""
      }
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/ui-core-storybook",
        "command": "tailwindcss -i ./.storybook/styles.css -o ./.storybook/tailwind.css -c tailwind.config.js -w & storybook dev --port 8800 && fg"
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/ui-core-storybook",
        "command": "storybook build --output-dir ../../dist/storybook/my-app"
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/ui-core-storybook/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "dependsOn": [
        "build-storybook"
      ],
      "options": {
        "buildTarget": "ui-core-storybook:build-storybook",
        "staticFilePath": "dist/storybook/ui-core-storybook",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "ui-core-storybook:build-storybook:ci"
        }
      }
    }
  }
}
